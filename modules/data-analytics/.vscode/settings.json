{
    "files.exclude": {
        "out": true, // set this to true to hide the "out" folder with the compiled JS files
        "**/*.pyc": true,
        ".nyc_output": true,
        "obj": true,
        "bin": false,
        "**/__pycache__": true,
        "**/node_modules": true,
        ".vscode-test": false,
        ".vscode test": false,
        "**/.mypy_cache/**": true
    },
    "search.exclude": {
        "out": true, // set this to false to include "out" folder in search results
        "dist": true,
        "**/node_modules": true,
        "coverage": true,
        "languageServer*/**": true,
        ".vscode-test": true,
        ".vscode test": true
    },
    "python.analysis.typeCheckingMode": "basic",
    "editor.formatOnSave": true
}